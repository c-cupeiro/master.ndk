<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.imgprocesado.MainActivity">

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_margin="@dimen/com_facebook_tooltip_horizontal_padding"
        facebook:com_facebook_confirm_logout="false"
        facebook:com_facebook_tooltip_mode="never_display"
        android:layout_width="wrap_content"
        android:layout_height="121dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/com_facebook_tooltip_horizontal_padding"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/com_facebook_tooltip_horizontal_padding"
            android:text="USUARIO: "/>
        <TextView
            android:id="@+id/tv_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/com_facebook_tooltip_horizontal_padding"
            android:text="--"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/com_facebook_tooltip_horizontal_padding"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:text="Escribe un nuevo post:"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6">
        <EditText
            android:id="@+id/et_textoCompartir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/com_facebook_tooltip_horizontal_padding"
            android:layout_weight="2"
            android:hint="Escribe algo"
            />
        <Button
            android:id="@+id/btn_compartir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/com_facebook_tooltip_horizontal_padding"
            android:layout_weight="4"
            android:text="Compartir"/>
    </LinearLayout>


</LinearLayout>
